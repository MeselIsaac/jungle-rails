<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>


  <div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_for [@product, @Rating] do |form| %>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :rating %>
        <%= form.select :rating, options_for_select(1..5), class: 'form-control' %>
      </div>
    
      <%= form.submit 'Submit Rating', class: 'btn btn-primary' %>
      
    <% end %>
  </div>
</div>
      
      <div class="col-sm-8">
        <dl class="dl-horizontal">
        
        <h3> User Ratings </h3>
          
          <% @rating.zip(@userID) do |rating, id| %>
            <dt>User:</dt>
          <dd><%= User.find(id).first_name %> <%= User.find(id).last_name %></dd>
         
          <dt>Rating:</dt>
          <dd><%=rating.rating%> / 5</dd>
          <dt>Description:</dt>
          <dd><%= rating.description %></dd>
        </dl>
      </div>
      
       
      <% end %>
   
    </div>

  </article>


</section>
